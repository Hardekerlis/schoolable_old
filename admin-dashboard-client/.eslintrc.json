{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react"],
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"eqeqeq": ["error", "always"],
		"curly": ["error", "all"],
		"no-unused-vars": ["off"],
		"react/boolean-prop-naming": [
			"off",
			{ "propTypeNames": ["bool"], "validateNested": true }
		],
		"react/jsx-curly-spacing": [
			"error",
			{
				"when": "always",
				"children": { "when": "always" },
				"attributes": { "allowMultiline": false }
			}
		],
		"react/prop-types": "off"
	}
}
